{
    "comments": {
        "lineComment": ";"
    },
    "folding": {
        "markers": {
            "start": "^\\s*\\[.*\\].*$",
            "end": "(?=^\\s*\\[.*\\].*$)"
        },
        "offSide": false,
        "foldingRegions": {
            "start": "^\\s*\\[.*\\]",
            "end": "(?=^\\s*\\[.*\\]|\\s*$)"
        }
    },
    "brackets": [["{", "}"], ["[", "]"], ["(", ")"]],
    "surroundingPairs":  [
        ["[", "]"],
        ["{", "}"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "(", "close": ")" },
      { "open": "'", "close": "'", "notIn": ["string", "comment"] },
      { "open": "\"", "close": "\"", "notIn": ["string"] }
    ]
}
