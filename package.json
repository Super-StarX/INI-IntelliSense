{
  "name": "ra2-ini-intellisense",
  "displayName": "%extension.displayName%",
  "publisher": "Astralette",
  "description": "%extension.description%",
  "repository": {
    "type": "git",
    "url": "https://github.com/Super-StarX/INI-IntelliSense.git"
  },
  "private": true,
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [
    "onLanguage:ra2-ini"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ra2-ini",
        "aliases": [
          "INI (RA2)",
          "ini"
        ],
        "extensions": [
          ".ini"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ra2-ini",
        "scopeName": "source.ra2-ini",
        "path": "./syntaxes/ini.tmLanguage.json"
      }
    ],
    "semanticTokenProvider": {
      "id": "iniSemanticProvider",
      "selector": [
        {
          "language": "ra2-ini"
        }
      ],
      "legend": {
        "tokenTypes": [
          "comment",
          "sectionBracket",
          "sectionContent",
          "sectionInherit",
          "keyPart1",
          "keyPart2",
          "keyPart3",
          "operator",
          "value",
          "valueComma",
          "valueString"
        ],
        "tokenModifiers": []
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ini-intellisense-explorer",
          "title": "%view.container.title%",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "ini-intellisense-explorer": [
        {
          "id": "ini-outline",
          "name": "%view.outline.name%",
          "icon": "$(list-tree)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ra2-ini-intellisense.refreshOutline",
          "when": "view == ini-outline",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "editorTextFocus && editorLangId == 'ra2-ini'",
          "command": "ra2-ini-intellisense.registerSectionContext",
          "group": "1_modification"
        },
        {
          "when": "editorTextFocus && editorLangId == 'ra2-ini'",
          "command": "ra2-ini-intellisense.refactor.extractSuperclass",
          "group": "2_refactor"
        },
        {
          "when": "editorTextFocus && editorLangId == 'ra2-ini'",
          "command": "ra2-ini-intellisense.format.selection",
          "group": "9_format"
        },
        {
          "when": "editorTextFocus && editorLangId == 'ra2-ini'",
          "command": "ra2-ini-intellisense.format.document",
          "group": "9_format"
        }
      ]
    },
    "commands": [
      {
        "command": "ra2-ini-intellisense.showWelcomePage",
        "title": "%command.showWelcomePage.title%",
        "category": "%command.category%"
      },
      {
        "command": "ra2-ini-intellisense.manageValidator",
        "title": "%command.manageValidator.title%",
        "category": "%command.category%"
      },
      {
        "command": "ra2-ini-intellisense.refreshOutline",
        "title": "%command.refreshOutline.title%",
        "icon": "$(refresh)"
      },
      {
        "command": "ra2-ini-intellisense.showDebugInfo",
        "title": "%command.showDebugInfo.title%",
        "category": "%command.category%"
      },
      {
        "command": "ra2-ini-intellisense.configureSchemaPath",
        "title": "%command.configureSchemaPath.title%",
        "category": "%command.category%"
      },
      {
        "command": "ra2-ini-intellisense.jumpToOverride",
        "title": "%command.jumpToOverride.title%",
        "category": "%command.category%"
      },
      {
        "command": "ra2-ini-intellisense.showMainQuickPick",
        "title": "%command.showMainQuickPick.title%",
        "category": "%command.category%"
      },
      {
        "command": "ra2-ini-intellisense.registerSectionContext",
        "title": "%command.registerSectionContext.title%",
        "category": "%command.category%"
      },
      {
        "command": "ra2-ini-intellisense.refactor.extractSuperclass",
        "title": "%command.extractSuperclass.title%",
        "category": "%command.category%.refactor"
      },
      {
        "command": "ra2-ini-intellisense.format.selection",
        "title": "%command.formatSelection.title%",
        "category": "%command.category%"
      },
      {
        "command": "ra2-ini-intellisense.format.document",
        "title": "%command.formatDocument.title%",
        "category": "%command.category%"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "ra2-ini-intellisense.exePath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "%configuration.properties.exePath.description%"
        },
        "ra2-ini-intellisense.validationFolderPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "%configuration.properties.validationFolderPath.description%"
        },
        "ra2-ini-intellisense.validationFiles": {
          "type": "object",
          "default": {
            "rules": "rules.ini",
            "art": "art.ini",
            "sound": "sound.ini",
            "eva": "eva.ini"
          },
          "description": "%configuration.properties.validationFiles.description%"
        },
        "ra2-ini-intellisense.indexing.includePatterns": {
          "type": "array",
          "default": [],
          "description": "%configuration.properties.indexing.includePatterns.description%",
          "items": {
            "type": "string"
          }
        },
        "ra2-ini-intellisense.indexing.fileCategories": {
          "type": "object",
          "default": {
            "rules": [
              "rules*.ini"
            ],
            "art": [
              "art*.ini"
            ],
            "sound": [
              "sound*.ini"
            ],
            "ui": [
              "ui*.ini"
            ],
            "theme": [
              "theme*.ini"
            ],
            "ai": [
              "ai*.ini"
            ]
          },
          "description": "%configuration.properties.indexing.fileCategories.description%",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "ra2-ini-intellisense.indexing.excludePatterns": {
          "type": "array",
          "default": [],
          "description": "%configuration.properties.indexing.excludePatterns.description%",
          "items": {
            "type": "string"
          }
        },
        "ra2-ini-intellisense.dontAskToConfigureValidator": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.properties.dontAskToConfigureValidator.description%"
        },
        "ra2-ini-intellisense.dontAskToConfigureProject": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.properties.dontAskToConfigureProject.description%"
        },
        "ra2-ini-intellisense.schemaFilePath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "%configuration.properties.schemaFilePath.description%"
        },
        "ra2-ini-intellisense.codeLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.properties.codeLens.enabled.description%"
        },
        "ra2-ini-intellisense.decorations.overrideIndicator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.properties.decorations.overrideIndicator.enabled.description%"
        },
        "ra2-ini-intellisense.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.properties.diagnostics.enabled.description%"
        },
        "ra2-ini-intellisense.diagnostics.spaceBeforeEquals": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.properties.diagnostics.spaceBeforeEquals.description%"
        },
        "ra2-ini-intellisense.diagnostics.spaceAfterEquals": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.properties.diagnostics.spaceAfterEquals.description%"
        },
        "ra2-ini-intellisense.diagnostics.leadingWhitespace": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.properties.diagnostics.leadingWhitespace.description%"
        },
        "ra2-ini-intellisense.diagnostics.spacesBeforeComment": {
          "type": [
            "number",
            "null"
          ],
          "default": 1,
          "description": "%configuration.properties.diagnostics.spacesBeforeComment.description%"
        },
        "ra2-ini-intellisense.diagnostics.spaceAfterComment": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.properties.diagnostics.spaceAfterComment.description%"
        },
        "ra2-ini-intellisense.diagnostics.severity": {
          "type": "object",
          "default": {},
          "description": "%configuration.properties.diagnostics.severity.description%",
          "additionalProperties": {
            "type": "string",
            "enum": ["Error", "Warning", "Information", "Hint", "None"]
          }
        }
      }
    },
    "configurationDefaults": {
      "files.associations": {
        "*.ini": "ra2-ini"
      },
      "[ra2-ini]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.definitionLinkOpensInPeek": false
      },
      "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
          "sectionBracket": "#FFD700",
          "sectionContent": "#fffab2",
          "sectionInherit": "#fffab29a",
          "keyPart1": "#50b0ff",
          "keyPart2": "#509cff",
          "keyPart3": "#5079ff",
          "operator": "#ffffff",
          "value": "#82c7ff",
          "valueComma": "#ffd000",
          "valueString": "#a76c00",
          "comment": "#808080"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "i18n:extract": "vscode-nls-dev extract --outDir i18n"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "vscode-nls": "^5.1.2",
    "vscode-nls-dev": "^9.0.4"
  },
  "dependencies": {
    "ini": "^5.0.0"
  }
}