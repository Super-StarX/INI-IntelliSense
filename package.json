{
  "name": "ra2-ini-intellisense",
  "displayName": "INI IntelliSense",
  "publisher": "Astralette",
  "description": "为红色警戒2 Mod开发提供强大的INI智能提示",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ra2-ini"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ra2-ini",
        "aliases": [
          "INI",
          "ini"
        ],
        "extensions": [
          ".ini"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ra2-ini",
        "scopeName": "source.ini",
        "path": "./syntaxes/ini.tmLanguage.json"
      }
    ],
    "files.associations": {
      "*.ini": "ra2-ini"
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ini-intellisense-explorer",
          "title": "INI Project",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "ini-intellisense-explorer": [
        {
          "id": "ini-outline",
          "name": "INI Project Outline"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ra2-ini-intellisense.refreshOutline",
          "when": "view == ini-outline",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "ra2-ini-intellisense.manageValidator",
        "title": "管理 INI Validator",
        "category": "INI IntelliSense"
      },
      {
        "command": "ra2-ini-intellisense.refreshOutline",
        "title": "刷新 INI 大纲",
        "icon": "$(refresh)"
      },
      {
        "command": "ra2-ini-intellisense.showDebugInfo",
        "title": "INI: 显示当前上下文调试信息",
        "category": "INI IntelliSense"
      },
      {
        "command": "ra2-ini-intellisense.configureSchemaPath",
        "title": "INI: 设置 Schema 文件路径",
        "category": "INI IntelliSense"
      }
    ],
    "configuration": {
      "title": "INI IntelliSense",
      "properties": {
        "ra2-ini-intellisense.exePath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "INIValidator.exe 的绝对路径。推荐通过点击状态栏图标或使用 '管理 INI Validator' 命令进行设置。"
        },
        "ra2-ini-intellisense.validationFolderPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "要校验的Mod根目录的绝对路径。推荐通过点击状态栏图标或使用 '管理 INI Validator' 命令进行设置。"
        },
        "ra2-ini-intellisense.validationFiles": {
          "type": "object",
          "default": {
            "rules": "rules.ini",
            "art": "art.ini",
            "sound": "sound.ini",
            "eva": "eva.ini"
          },
          "description": "要校验的文件列表。推荐通过点击状态栏图标或使用 '管理 INI Validator' 命令进行交互式编辑。"
        },
        "ra2-ini-intellisense.dontAskToConfigureValidator": {
          "type": "boolean",
          "default": false,
          "description": "如果为 true, 插件将不会在启动时询问您配置 INI Validator。"
        },
        "ra2-ini-intellisense.schemaFilePath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "INI 规则定义文件 (INICodingCheck.ini) 的绝对路径。如果未设置，将禁用基于规则的智能提示和诊断功能。"
        },
        "ra2-ini-intellisense.codeLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否在节 (Section) 上方显示代码透镜 (CodeLens), 以展示其被引用的次数。"
        },
        "ra2-ini-intellisense.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用或禁用所有内置的诊断检查。"
        },
        "ra2-ini-intellisense.diagnostics.disable": {
          "type": "array",
          "default": [],
          "description": "一个包含要禁用的特定错误码的列表 (例如, [\"STYLE-101\", \"TYPE-201\"])。",
          "items": {
            "type": "string"
          }
        },
        "ra2-ini-intellisense.diagnostics.spaceBeforeEquals": {
          "type": "boolean",
          "default": true,
          "description": "是否检查并警告等号 (=) 左侧的多余空格。"
        },
        "ra2-ini-intellisense.diagnostics.spaceAfterEquals": {
          "type": "boolean",
          "default": true,
          "description": "是否检查并警告等号 (=) 右侧的多余空格。"
        },
        "ra2-ini-intellisense.diagnostics.leadingWhitespace": {
          "type": "boolean",
          "default": true,
          "description": "是否检查并警告行首的多余空格。"
        },
        "ra2-ini-intellisense.diagnostics.spacesBeforeComment": {
          "type": [
            "number",
            "null"
          ],
          "default": 1,
          "description": "注释符号 (;) 前应有的确切空格数。设为 null 或留空可禁用此项检查。"
        },
        "ra2-ini-intellisense.diagnostics.spaceAfterComment": {
          "type": "boolean",
          "default": true,
          "description": "是否检查并警告注释符号 (;) 后缺少空格的情况 (例如 ';comment' 而非 '; comment')。"
        },
        "ra2-ini-intellisense.colors.sectionBracket": {
          "type": "string",
          "default": "#FFD700",
          "description": "节的方括号 `[]` 的颜色。"
        },
        "ra2-ini-intellisense.colors.sectionContent": {
          "type": "string",
          "default": "#fffab2",
          "description": "节的内容 (如 `[Globals]`) 的颜色。"
        },
        "ra2-ini-intellisense.colors.sectionInherit": {
          "type": "string",
          "default": "#fffab29a",
          "description": "节的继承部分 (如 `:[AbstractType]`) 的颜色。"
        },
        "ra2-ini-intellisense.colors.keyPart1": {
          "type": "string",
          "default": "#50b0ff",
          "description": "键的第一部分 (如 `Key.sub.sub`) 的颜色。"
        },
        "ra2-ini-intellisense.colors.keyPart2": {
          "type": "string",
          "default": "#509cff",
          "description": "键的第二部分 (如 `key.Sub.sub`) 的颜色。"
        },
        "ra2-ini-intellisense.colors.keyPart3": {
          "type": "string",
          "default": "#5079ff",
          "description": "键的第三部分及之后 (如 `key.sub.Sub`) 的颜色。"
        },
        "ra2-ini-intellisense.colors.operator": {
          "type": "string",
          "default": "#ffffff",
          "description": "等号 `=` 的颜色。"
        },
        "ra2-ini-intellisense.colors.value": {
          "type": "string",
          "default": "#82c7ff",
          "description": "值的默认颜色。"
        },
        "ra2-ini-intellisense.colors.valueComma": {
          "type": "string",
          "default": "#ffd000",
          "description": "值之间的逗号 `,` 的颜色。"
        },
        "ra2-ini-intellisense.colors.valueString": {
          "type": "string",
          "default": "#a76c00",
          "description": "被引号包裹的字符串 `\"...\"` 的颜色。"
        },
        "ra2-ini-intellisense.colors.comment": {
          "type": "string",
          "default": "#808080",
          "description": "注释 `;...` 的颜色。"
        }
      }
    },
    "configurationDefaults": {
      "[ra2-ini]": {
        "editor.definitionLinkOpensInPeek": false
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "ini": "^5.0.0"
  }
}